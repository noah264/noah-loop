# Noah-Loop 环境配置模板文件
# 复制此文件为 .env 并根据实际情况修改

# ====================
# 应用基础配置
# ====================
VERSION=1.0.0
ENVIRONMENT=development
DEBUG=false

# ====================
# 构建相关
# ====================
BUILD_TIME=
GIT_COMMIT=
DOCKER_REGISTRY=docker.io
DOCKER_NAMESPACE=noah-loop

# ====================
# 数据库配置
# ====================
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres123
DATABASE_NAME=agent_db
DATABASE_SSLMODE=disable

# ====================
# Redis 配置
# ====================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis123
REDIS_DB=0

# ====================
# etcd 配置
# ====================
ETCD_ENDPOINTS=etcd:2379
ETCD_USERNAME=
ETCD_PASSWORD=

# ====================
# 链路追踪配置
# ====================
JAEGER_ENDPOINT=http://jaeger:14268/api/traces
JAEGER_SAMPLE_RATE=0.1
TRACING_ENABLED=true

# ====================
# LLM 服务配置
# ====================
# OpenAI API 配置
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4

# 其他 LLM 提供商配置（可选）
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_DEPLOYMENT_NAME=

ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# ====================
# 通知服务配置
# ====================
# SMTP 邮件配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=Noah-Loop <noreply@noah-loop.com>

# 企业微信配置
WECHAT_WEBHOOK_URL=
WECHAT_BOT_KEY=

# 钉钉配置
DINGTALK_WEBHOOK_URL=
DINGTALK_SECRET=

# Slack 配置
SLACK_BOT_TOKEN=
SLACK_CHANNEL=

# ====================
# 对象存储配置（可选）
# ====================
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=noah-loop
MINIO_USE_SSL=false

# AWS S3 配置
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=

# ====================
# 监控配置
# ====================
PROMETHEUS_ENABLED=true
GRAFANA_ADMIN_PASSWORD=admin123
METRICS_PUSH_GATEWAY=

# ====================
# 安全配置
# ====================
JWT_SECRET=your_jwt_secret_key_here_should_be_very_long_and_random
API_KEY=your_api_key_here
ENCRYPTION_KEY=your_encryption_key_32_chars_long

# ====================
# 性能调优配置
# ====================
GO_MAX_PROCS=0
GOMEMLIMIT=1GiB

# 数据库连接池
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=10
DB_MAX_LIFETIME=5m

# Redis 连接池
REDIS_POOL_SIZE=10
REDIS_MIN_IDLE_CONNS=5

# ====================
# 日志配置
# ====================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout

# ====================
# 开发调试配置
# ====================
PPROF_ENABLED=false
PPROF_PORT=6060

# 热重载配置（开发环境）
AIR_ENABLED=false
